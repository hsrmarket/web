<div class="col-lg-11 row-l fixed-header fixed-footer">
    <form method="post" action="/articles/add" enctype="multipart/form-data">
        <div class="container-fluid">
            <h1 class="tbl-header">Add a new article to the HSRmarket</h1>
            <div class="row pad-lft-15">
                <div class="row width-eighty">
                    <div class="col-xs-6">
                        <p><h4 class="d-gray-fnt">Category (Read Only)</h4></p>
                        <input type="text" hidden="hidden" class="art-input" name="type" value="{{type}}"/>
                        <div class="fnt-sz-18">{{type}}</div>
                    </div>
                    <div class="col-xs-6 pd-right-0">
                        <p><h4 class="d-gray-fnt">Final price in Fr.</h4></p>
                        <div class=""><input type="text" class="art-input" name="price"/></div>
                    </div>
                    <div class="col-xs-6">
                        <p><h4 class="d-gray-fnt">Name</h4></p>
                        <div class=""><input type="text" class="art-input" name="name"/></div>
                    </div>
                    <div class="col-xs-6 pd-right-0">
                        <p><h4 class="d-gray-fnt">Condition</h4></p>
                        <input name="condition" type="range" step="1" min="0" max="10"/>
                    </div>
                </div>
                <div class="width-eighty art-desc row pd-left-15 pd-righ">
                    <h4 class="d-gray-fnt">Description</h4>
                    <textarea class="art-input hgt-hunp pd-left-10 pd-tp-10" name="description"></textarea>
                </div>
            </div>
        </div>

        <section class="row spec-rw width-eighty">
            <div>
                {{#equal type "book"}}
                    <h2 class="tbl-header">Book Specifications</h2>
                    <div class="col-xs-4 pd-left-0">
                        <h4 class="d-gray-fnt">ISBN</h4>
                        <input type="text" class="art-input pd-left-10" name="isbn"/>
                    </div>
                    <div class="col-xs-4 pd-left-0">
                        <h4 class="d-gray-fnt">Publisher</h4>
                        <input type="text" class="art-input pd-left-10" name="publisher"/>
                    </div>
                    <div class="col-xs-4 pd-left-0 pd-right-0">
                        <h4 class="d-gray-fnt">Author</h4>
                        <input type="text" class="art-input pd-left-10" name="author"/>
                    </div>
                {{/equal}}
                {{#equal type "electronic"}}
                    <h2 class="tbl-header">Electronic Specifications</h2>
                    <div class="col-xs-6 pd-left-0">
                        <h4 class="d-gray-fnt">Producer</h4>
                        <input type="text" class="art-input pd-left-10" name="producer"/>
                    </div>
                    <div class="col-xs-6 pd-right-0 pd-left-0">
                        <h4 class="d-gray-fnt">Model</h4>
                        <input type="text" class="art-input pd-left-10" name="model"/>
                    </div>
                {{/equal}}
            </div>

        </section>
        <div class="container-fluid art-edit-btm">
            <div>
                <input type="file" name="image"/>
            </div>
            <button  class="art-edit-btn" type="submit">Add article</button>
        </div>
    </form>
</div>