<div class="col-lg-11 row-l fixed-header fixed-footer">
    <form method="post" action="/articles/{{article.id}}/edit" enctype="multipart/form-data">
        <input type="text" hidden="hidden" name="id" value="{{article.id}}"/>
        <input type="text" hidden="hidden" name="name" value="{{article.name}}"/>
        <input type="text" hidden="hidden" name="creationDate" value="{{article.creationDate}}"/>
        <input type="text" hidden="hidden" name="oldimage" value="{{article.image}}"/>
    <div class="container-fluid">
        <h1 class="tbl-header">Article #{{article.id}}</h1>
        <div class="row pad-lft-15">
            <div class="row width-eighty">
                <div class="col-xs-4">
                    <figure>
                        <img src="{{articleImage}}" alt="HSRmarket" width="60rem" height="60rem" class="img-art-det">
                    </figure>
                </div>
                <div class="col-xs-4 hgt-hunp">
                    <p><h4 class="d-gray-fnt">Category (Read Only)</h4></p>
                    <div class="pd-left-10 fnt-sz-18">{{article.type}}</div>
                </div>
                <div class="col-xs-4 hgt-hunp pd-right-0">
                    <p><h4 class="d-gray-fnt">Final price in Fr.</h4></p>
                    <div class="pd-left-10"><input type="text" class="art-input pd-left-10" name="price" value="{{article.price}}"/></div>
                </div>
                <div class="col-xs-4 hgt-hunp">
                    <p><h4 class="d-gray-fnt">Article Name</h4></p>
                    <div class="pd-left-10">{{article.name}}</div>
                </div>
                <div class="col-xs-4 hgt-hunp pd-right-0">
                    <p><h4 class="d-gray-fnt">Condition</h4></p>
                    <input name="condition" type="range" step="1" min="0" max="10" value="{{article.condition}}"/>
                </div>
            </div>
            <div class="width-eighty art-desc row pd-left-15">
                <h4 class="d-gray-fnt">Description</h4>
                <textarea class="art-input hgt-hunp pd-left-10 pd-tp-10" name="description">{{article.description}}</textarea>
            </div>
        </div>
    </div>

    <section class="row spec-rw width-eighty">
        <div>
            {{#equal article.type "book"}}
                <h2 class="tbl-header">Book Specifications</h2>
                <div class="col-xs-4 pd-left-0">
                    <h4 class="d-gray-fnt">ISBN</h4>
                    <div>
                        <input type="text" class="art-input pd-left-10" name="isbn" value="{{article.isbn}}"/>
                    </div>
                </div>
                <div class="col-xs-4">
                    <h4 class="d-gray-fnt">Publisher</h4>
                    <div>
                        <input type="text" class="art-input pd-left-10" name="publisher" value="{{article.publisher}}"/>
                    </div>
                </div>
                <div class="col-xs-4 pd-right-0">
                    <h4 class="d-gray-fnt">Author</h4>
                    <div>
                        <input type="text" class="art-input pd-left-10" name="author" value="{{article.author}}"/>
                    </div>
                </div>
            {{/equal}}
            {{#equal article.type "electronic"}}
                <h2 class="tbl-header">Electronic Specifications</h2>
                <div class="col-xs-6 pd-left-0">
                    <h4 class="d-gray-fnt">Producer</h4>
                    <input type="text" class="art-input pd-left-10" name="producer" value="{{article.producer}}"/>
                </div>
                <div class="col-xs-6 pd-right-0">
                    <h4 class="d-gray-fnt">Model</h4>
                    <input type="text" class="art-input pd-left-10" name="model" value="{{article.model}}"/>
                </div>
            {{/equal}}
        </div>

    </section>
        <div class="container-fluid art-edit-btm">
            <div>
                <input type="file" name="image"/>
            </div>
            <button  class="btn art-edit-btn" type="submit">Save changes</button>
        </div>
    </form>
</div>