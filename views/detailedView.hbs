            <h1>Article #{{id}}</h1>
        </div>
        <figure>
            <img src="{{image}}" alt="{{title}}">
        </figure>
        <table>
            <tbody>
                <tr>
                    <th>Category</th>
                        <td>{{type}}</td>
                    <th>Final price</th>
                        <td>{{price}}</td>
                    <th>Module</th>
                        <td>{{name}}</td>
                    <th>Condition</th>
