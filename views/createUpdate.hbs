<div class="col-lg-11 row-l">
    <section class="row">
        {{#if article.length}}
            <div class="column">
                <h1>Article #{{id}}</h1>
            </div>
            <figure>
                <img src="{{image}}" alt="{{title}}">
            </figure>
            <table>
                <tbody>
                    <tr>
                        <th>Category</th>
                            <td>{{type}}</td>
                        <th>Final price</th>
                            <td>{{price}}</td>
                        <th>Module</th>
                            <td>{{name}}</td>
                        <th>Condition</th>
                            <td>{{conditionMaker condition}}</td>
                </tbody>
            </table>
            <h5>Description</h5>
            <p>{{description}}</p>
            {{#if typeChecker type "book"}}
                <h2>Book Specifications</h2>
                <table>
                    <tbody>
                    <tr>
                        <th>ISBN</th>
                            <td>{{isbn}}</td>
                        <th>publisher</th>
