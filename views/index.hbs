
<section class="row align-bottom">
    <div class="column align-self-middle">
        <form method="get" action="/fetch">
            <figure>
                <img src="/images/ICON_HSRMARKET_MIT_TEXT_TRANSPARENT.png" alt="HSRmarket">
            </figure>
            <div>
                <div >
                    <input placeholder="search", type="text", name="search" required />
                </div>
                <button type="submit" class="button" disabled>Search</button>
            </div>
        </form>
        <a class="button large success" href="/api/articles/books">Books</a>
        <a class="button large success" href="/api/articles/electronics">Electronics</a>
        <a class="button large success" href="/api/articles/officesupplies">Office supplies</a>
        <a  class="button large success" href="/api/articles/other">Other</a>
    </div>
</section>
<section class="row align-bottom">
    <div class="column align-self-middle">
        <header>
            <h1>Recent articles in the market</h1>
        </header>
        {{#if articles.length}}
            <table>
                <tbody>
                    {{#each articles}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <div> current collection is empty. </div>
        {{/if}}
    </div>
</section>
